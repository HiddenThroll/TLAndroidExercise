<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomTitleView">
        <attr name="custom_title_text" format="string"/>
        <attr name="custom_title_size" format="dimension"/>
        <attr name="custom_title_color" format="color"/>
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="custom_image_title" format="string"/>
        <attr name="custom_image_size" format="dimension"/>
        <attr name="custom_image_color" format="color"/>
        <attr name="custom_image_src" format="reference"/>
        <attr name="custom_image_scale" format="enum">
            <enum name="fillXY" value="0"/>
            <enum name="center" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CustomCircle">
        <attr name="custom_circle_width" format="dimension"/>
        <attr name="custom_circle_fir_color" format="color"/>
        <attr name="custom_circle_sec_color" format="color"/>
        <attr name="custom_circle_speed" format="integer"/>
    </declare-styleable>

    <declare-styleable name="CustomVolumeBar">
        <attr name="custom_volume_bar_fir_color" format="color"/>
        <attr name="custom_volume_bar_sec_color" format="color"/>
        <attr name="custom_volume_bar_bg" format="reference"/>
        <attr name="custom_volume_bar_count" format="integer"/>
        <attr name="custom_volume_bar_split_size" format="integer"/>
        <attr name="custom_volume_bar_circle_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="CustomArcShow">
        <attr name="custom_arc_show_total_count" format="integer"/>
        <attr name="custom_arc_show_current_count" format="integer"/>
        <attr name="custom_arc_show_circle_width" format="dimension"/>
        <attr name="custom_arc_show_arc_color" format="color"/>
        <attr name="custom_arc_show_text_color" format="color"/>
        <attr name="custom_arc_show_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="GestureLockViewGroup">
        <attr name="color_no_finger_inner_circle" format="color"/>
        <attr name="color_no_finger_outer_circle" format="color"/>
        <attr name="color_finger_on" format="color"/>
        <attr name="color_finger_up" format="color"/>
        <!-- 每行/每列单元个数-->
        <attr name="count" format="integer"/>
        <!-- 重试次数-->
        <attr name="try_times" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ScheduleChart">
        <attr name="color_schedule_time" format="color"/>
        <attr name="color_use_time" format="color"/>
        <attr name="color_conflict_time" format="color"/>
        <attr name="total_time_in_seconds" format="integer"/>
        <attr name="line_height" format="dimension"/>
        <attr name="line_width" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="recycler_view">
        <attr name="divider_list" format="reference"/>
    </declare-styleable>
</resources>