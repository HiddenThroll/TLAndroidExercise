<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_transition_explode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="分解动画"
                android:layout_margin="8dp"
                />

            <Button
                android:id="@+id/btn_transition_slide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="滑动动画"
                android:layout_margin="8dp"
                />

            <Button
                android:id="@+id/btn_transition_fade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="淡出动画"
                android:layout_margin="8dp"
                />

            <Button
                android:id="@+id/btn_transition_change_bounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="改变视图布局边界"
                android:layout_margin="8dp"
                />

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center"
                android:transitionName="@string/share_activity"
                />
        </LinearLayout>

    </ScrollView>



</LinearLayout>