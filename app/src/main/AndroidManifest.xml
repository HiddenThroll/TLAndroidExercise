<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tanlong.exercise">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.activity.MainActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTask"
            android:configChanges="keyboard"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.activity.view.ViewCategoryActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <!-- 自定义View相关-->
        <activity
            android:name=".ui.activity.view.customview.CustomViewCategoryActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.customview.CustomTitleViewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.customview.CustomImageViewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.customview.CustomCircleViewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.customview.CustomVolumeBarActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.customview.CustomArcShowActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />

        <!-- 自定义ViewGroup相关-->
        <activity
            android:name=".ui.activity.view.customviewgroup.CustomViewGroupCategoryActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.customviewgroup.VerticalLinearLayoutActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.customviewgroup.LeftDrawerLayoutActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />

        <!-- ListView相关-->
        <activity
            android:name=".ui.activity.view.listview.ListViewCategoryActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.listview.SwipeRefreshListViewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.listview.LoadMoreListViewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.listview.SwipeRefreshLoadMoreListViewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />

        <!-- ViewDrag相关-->
        <activity
            android:name=".ui.activity.view.viewdrag.ViewDragCategoryActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
        <activity
            android:name=".ui.activity.view.viewdrag.ViewDragHelperActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:configChanges="keyboard"
            />
    </application>

</manifest>